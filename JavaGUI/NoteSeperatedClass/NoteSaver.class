package JavaLearning.NoteSeperatedClass;

import java.io.File;
import java.io.FileWriter;
import java.io.IOException;

public class NoteSaver {
    private String directoryPath;

    public NoteSaver(String directoryPath) {
        this.directoryPath = directoryPath;
    }

    public void saveNoteToFile(Note note) throws IOException {
        File directory = new File(directoryPath);
        if (!directory.exists()) {
            directory.mkdir();
            System.out.println("Directory created: " + directory.getAbsolutePath());
        }

        if (!note.getFileName().endsWith(".txt")) {
            note.setFileName(note.getFileName() + ".txt");
        }

        File file = new File(directoryPath + "/" + note.getFileName());
        FileWriter writer = new FileWriter(file);
        writer.write(note.getNoteText());
        writer.close();
        System.out.println("Note saved to file: " + file.getAbsolutePath());
    }
}
